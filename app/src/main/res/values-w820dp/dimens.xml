<resources>
    <!-- Example customization of dimensions originally defined in res/values/dimens.xml
         (such as screen margins) for screens with more than 820dp of available width. This
         would include 7" and 10" devices in landscape (~960dp and ~1280dp respectively). -->
    <dimen name="activity_horizontal_margin">64dp</dimen>
    <dimen name="list_horizontal_margin">300dp</dimen>

    <!-- Widgets -->
    <dimen name="widget_default_width">110dp</dimen>
    <dimen name="widget_default_height">40dp</dimen>
    <dimen name="widget_min_resize_width">40dp</dimen>
    <dimen name="widget_min_resize_height">@dimen/widget_default_height</dimen>
    <dimen name="widget_large_width">220dp</dimen>

    <!-- Collection widget -->
    <dimen name="widget_collection_width">250dp</dimen>
    <dimen name="widget_collection_height">180dp</dimen>
    <dimen name="widget_collection_min_resize_width">220dp</dimen>
    <dimen name="widget_collection_min_resize_height">180dp</dimen>
</resources>
